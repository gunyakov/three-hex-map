{
  "compilerOptions": {
      "moduleResolution": "node",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "commonjs",
      "target": "es6",
      "outDir": "build",
      "rootDir": "src",
      "lib": [
          "dom",
          "es2015"
      ],
      "types": [
          "requirejs",
          "three"
      ],
      "preserveConstEnums": true
  },
  "exclude": [
      "node_modules",
      "src/map.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}